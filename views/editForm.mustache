<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
{{> header}}
<div class="menuDiv leftDiv">
    <div class="authImgDiv">
        {{#form}}
            <a href="/forms/{{id}}">
                <img id="backImg" src="/images/back.png" alt="back">
            </a>
        {{/form}}
    </div>
</div>
<div class="menuDiv rightDiv">
    {{#login}}
        <div class="roleDiv">
            <a href="/forms/profile/{{id}}" id="userDataP">{{role}}: {{login}}</a>
        </div>
        <div class="authImgDiv">
            <a href="/" id="logoutA">
                <img id="authImg" src="/images/logout3.png" alt="logout">
            </a>
        </div>
    {{/login}}
    {{^login}}
        <div class="roleDiv">
            <p id="userDataP">Користувач</p>
        </div>
        <div class="authImgDiv">
            <a href="/auth/login">
                <img id="authImg" src="/images/user.png" alt="login">
            </a>
        </div>
    {{/login}}
</div>
<div class="mainDiv">
    <div class="leftPartMainDiv">
        <p class="mainListP">Редагування бланка</p>
        <div class="formDiv">
            {{#form}}
                <div>
                    <div>
                        <img src="/images/document.png" alt="document">
                        <!--                        <p class="firstP">Бланк&nbsp;&nbsp;№{number}}</p>-->
                        <!--                        <p>Серія&nbsp;&nbsp;№{series}}</p>-->
                    </div>
                </div>
            {{/form}}
        </div>
    </div>
    <div class="rightPartMainDiv">
        {{#form}}
            <form action="/forms/{{id}}/edit" , method="post" , enctype="multipart/form-data">
                <div class="filtersMainDiv">
                    <div class="tileDive">
                        <img src="/images/series.png" alt="series">
                        <p>Серія</p>
                        <div>
                            <input class="seriesInput" type="number" placeholder="0" name="series" value="{{series}}"/>
                            <input name="old_series" value="{{series}}" type="hidden">
                        </div>
                    </div>
                    <div class="tileDive">
                        <img src="/images/number.png" alt="number">
                        <p>Номер</p>
                        <div>
                            <input class="numberInput" type="number" placeholder="0" name="number" value="{{number}}"/>
                            <input name="old_number" value="{{number}}" type="hidden">
                        </div>
                    </div>
                    <div class="tileDive">
                        <img src="/images/calendar.png" alt="date of usage">
                        <p>Дата використання</p>
                        <div>
                            <!--                        <p>{usage_date}}</p>-->
                            <input class="dateInput" type="date" name="usage_date" value="{{usage_date}}"/>
                            <input name="old_usage_date" value="{{usage_date}}" type="hidden">
                        </div>
                    </div>
                    <div class="tileDive bigDiv">
                        <img src="/images/register.png" alt="registered on">
                        <p>Зареєстровано на</p>
                        <div class="initialsDiv">
                            <select class="statusInput" name="login">
                                <option value="">-- логін --</option>
                                {{#logins}}
                                    <option value="{{login}}">{{login}}</option>
                                {{/logins}}
                            </select>
                            <input name="old_login" value="{{login}}" type="hidden">
                        </div>
                    </div>
                    <div class="tileDive tileDive2">
                        <img src="/images/status.png" alt="document status">
                        <p>Статус бланка</p>
                        <div>
                            <select class="statusInput" name="status">
                                <option value="">-- статус --</option>
                                {{#statuses}}
                                    <option value="{{status}}">{{status}}</option>
                                {{/statuses}}
                            </select>
                            <input name="old_status" value="{{status}}" type="hidden">
                        </div>
                    </div>
                    <div>
                        <input type="submit" value="Відредагувати" id="editInput">
                    </div>
                </div>
            </form>
        {{/form}}
    </div>
</div>
{{> footer}}
</body>
<script src="/javascripts/logoutScript.js"></script>
</html>